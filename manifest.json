{
    "manifest_version": 3,
    "name": "Text Summarizer",
    "version": "0.1.5.5",
    "description": "Summarize any selected text with AI",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "sidePanel"
    ],
    "host_permissions": [
        "https://api.openai.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Click to open panel"
    }
}